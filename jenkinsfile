pipeline {
    agent any
    environment {
        DOCKER_IMAGE_NAME = "salahmarabou/angular"
        DOCKER_HUB_CREDENTIALS = 'docker'
        DOCKER_COMPOSE_VERSION = "1.29.2"
    }


    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
            stage('docker Build') {
                    steps {
                        sh 'docker build -t salahmarabou/angular .'
                    }
                }
            stage('docker push') {
                    steps {
                        sh 'docker push salahmarabou/angular:latest'
                    }
                }


            stage('Run Docker Compose') {
                            steps {
                                script {
                                    // Perform Docker login
                                    sh 'docker login -u salahmarabou  -p salahsalah'

                                    // Pull the Docker image
                                    sh 'docker pull salahmarabou/angular'

                                    // Run Docker Compose    s
                                    sh 'docker compose up -d'
                                }
                            }
                        }


            }
        }